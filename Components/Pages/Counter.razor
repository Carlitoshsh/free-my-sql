@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-secondary" @onclick="@(() => IncrementCount(-1))">Reste</button>
<button class="btn btn-primary" @onclick="@(() => IncrementCount(1))">Sume</button>

@code {
    private int currentCount = 0;

    private void IncrementCount(int factor)
    {
        currentCount = currentCount+factor;
    }
}
